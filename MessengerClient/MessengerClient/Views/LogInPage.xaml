<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessengerClient.Views.LogInPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <Label x:Name="info" Text="log in" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"/>
                <Entry 
                    x:Name="nickname"
                    Placeholder="nickname"
                    MaxLength="32"
                    WidthRequest="200" />
                <Entry 
                    x:Name="password"
                    Placeholder="password"
                    MaxLength="32"
                    WidthRequest="200"
                    IsPassword="True"/>
                <Button Text="submit"
                    x:Name="submit"
                    HorizontalOptions="CenterAndExpand" />
            </StackLayout>
            <Button Text="registration" 
                    x:Name="registration"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>